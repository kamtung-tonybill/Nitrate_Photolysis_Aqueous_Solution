&GLOBAL
  PROJECT nitrate_solution_walker_0
  FFTW_PLAN_TYPE MEASURE
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE  NVT
    STEPS    1000
    TIMESTEP        0.5
    TEMPERATURE     300.
    COMVEL_TOL     1.00E-03
    INITIALIZATION_METHOD  DEFAULT
    &THERMOSTAT
      TYPE  CSVR
      &CSVR
        TIMECON     9.9999999999999986E+01
      &END CSVR
    &END THERMOSTAT
    &AVERAGES  T
    &END AVERAGES
  &END MD
  &PRINT
    &VELOCITIES
    &END VELOCITIES
    &RESTART  SILENT
      &EACH
        MD  10
      &END EACH
    &END RESTART
    &FORCES  SILENT
      &EACH
        MD  10
      &END EACH
    &END FORCES
  &END PRINT
  &FREE_ENERGY
    &METADYN
      USE_PLUMED .TRUE.
      PLUMED_INPUT_FILE ./plumed.dat
    &END METADYN
  &END FREE_ENERGY
&END MOTION

&FORCE_EVAL
  &DFT
    UKS
    MULTIPLICITY 3
    BASIS_SET_FILE_NAME ../../basis/GTH_BASIS_SETS
    BASIS_SET_FILE_NAME ../../basis/BASIS_ADMM
    POTENTIAL_FILE_NAME ../../basis/POTENTIAL
    &MGRID
      CUTOFF 400
    &END MGRID
    &SCF
      SCF_GUESS RESTART
      MAX_SCF 20
      EPS_SCF 1.0E-5
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
      &END OT
      &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 1.0E-5
      &END OUTER_SCF
    &END SCF
    &QS
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-14
      EXTRAPOLATION_ORDER 5
    &END QS
    &XC # revPBE0-TC-D3
      &XC_FUNCTIONAL
        &PBE
          PARAMETRIZATION REVPBE
          SCALE_X 0.75
          SCALE_C 1.0
        &END
      &END XC_FUNCTIONAL
      &HF
        FRACTION 0.25
        &SCREENING
          EPS_SCHWARZ 1.0E-6
        &END
        &MEMORY
          MAX_MEMORY 37000
          EPS_STORAGE_SCALING 0.1
        &END
        &INTERACTION_POTENTIAL
          POTENTIAL_TYPE TRUNCATED
          CUTOFF_RADIUS 6.0
          T_C_G_DATA ../../basis/t_c_g.dat
        &END
        &HF_INFO
        &END HF_INFO
      &END
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD3
            R_CUTOFF 15
            LONG_RANGE_CORRECTION TRUE
            REFERENCE_FUNCTIONAL revPBE0
            PARAMETER_FILE_NAME ../../basis/dftd3.dat
         &END
      &END
      &XC_GRID
        XC_DERIV SPLINE2
      &END
    &END XC
    &AUXILIARY_DENSITY_MATRIX_METHOD
      METHOD BASIS_PROJECTION
      ADMM_PURIFICATION_METHOD MO_DIAG
    &END AUXILIARY_DENSITY_MATRIX_METHOD
  &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME nh4no3_63h2o_t1_2ps.xyz
      COORD_FILE_FORMAT XYZ
      CONN_FILE_FORMAT GENERATE
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
    &CELL
      ABC [angstrom] 12.98 12.98 12.98
      MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &KIND H
      MASS 2.000
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT cpFIT3
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT cpFIT3
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND N
      BASIS_SET DZVP-GTH
      BASIS_SET AUX_FIT cpFIT3
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
